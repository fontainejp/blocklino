{
 "name": "Blocklino",
 "version": "1.2.0",
 "description": "environnement de d√©veloppement pour langage graphique",
 "author": "Fontaine Jean Philippe",
 "license": "CC0-1.0",
 "main": "electronApp.js",
 "keywords": [
		"blockly","BLOCKLY",
		"arduino","ARDUINO",
		"esp8266","ESP8266",
		"electron","ELECTRON",
		"electron-builder",
		"electron-log",
		"electron-updater",
		"serialport","SERIALPORT"
 ],
 "scripts": {
  "postinstall": "electron-builder install-app-deps",
  "start": "electron .",
  "compile": "build --win --ia32",
  "release": "build --win --ia32 -p always"
 },
 "build": {
  "appId": "com.electron.blocklino",
  "asar": true,
  "directories": {
    "buildResources": "./build",
	"output": "../../../../dist"
  },
  "nsis": {
   "installerIcon": "build/install.ico",
   "uninstallerIcon": "build/uninstall.ico",
   "oneClick": false,
   "perMachine": true,
   "deleteAppDataOnUninstall": true,
   "allowToChangeInstallationDirectory": true,
   "runAfterFinish": true,
   "include": "build/blocklino.nsh"
  },
  "win": {
   "target": ["nsis", "portable"],
   "icon": "build/app.ico"
  },
  "fileAssociations": {
   "ext": "bloc",
   "name": "BLOC File",
   "role": "Editor",
   "icon": "build/file.ico"
  },
  "extraFiles": [
   "www",
   "README.md",
   "LICENSE.md",
   "compilation",
   "pilotes"
  ]
 },
 "repository": {
  "type": "git",
  "url": "https://github.com/fontainejp/blocklino"
 },
 "devDependencies": {
  "electron": "^2.0.17",
  "electron-builder": "^20.29.0"
 },
 "dependencies": {
  "ajv": "^6.9.1",
  "child_process": "^1.0.2",
  "data-table": "^2.0.0",
  "electron-log": "^1.3.0",
  "electron-updater": "^3.2.3",
  "serialport": "^4.0.7"
 }
}