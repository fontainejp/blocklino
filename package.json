{
 "name": "Blocklino",
 "version": "1.9.1",
 "description": "environnement de d√©veloppement pour langage graphique",
 "author": "Fontaine Jean Philippe",
 "license": "CC0-1.0",
 "homepage": "https://fontainejp.github.io/",
 "main": "electronApp.js",
 "keywords": [
  "blockly",
  "BLOCKLY",
  "arduino",
  "ARDUINO",
  "esp32",
  "ESP32",
  "esp8266",
  "ESP8266",
  "electron",
  "ELECTRON",
  "serialport",
  "SERIALPORT",
  "electron-builder",
  "electron-updater",
  "PYTHON",
  "python",
  "microbit",
  "MICROBIT",
  "ACE",
  "ace"
 ],
 "scripts": {
  "postinstall": "electron-builder install-app-deps",
  "start": "electron .",
  "compiler": "build --win --ia32",
  "publier": "build --win --ia32 -p always",
  "comp-mac": "build --mac",
  "pub-mac": "build --mac -p always"
 },
 "build": {
  "appId": "com.electron.blocklino",
  "asar": false,
  "directories": {
   "buildResources": "./build",
   "output": "../dist"
  },
  "nsis": {
   "installerIcon": "build/install.ico",
   "uninstallerIcon": "build/app.ico",
   "oneClick": false,
   "perMachine": true,
   "deleteAppDataOnUninstall": true,
   "allowToChangeInstallationDirectory": true,
   "runAfterFinish": true,
   "include": "build/blocklino.nsh"
  },
  "win": {
   "target": [
    "nsis",
    "portable",
    "zip"
   ],
   "icon": "build/app.ico"
  },
  "mac": {
   "target": "dmg",
   "icon": "build/app.icns"
   },
  "fileAssociations": [
   {
    "ext": "bloc",
    "name": "BLOC File",
    "role": "Editor",
    "icon": "build/bloc.ico"
   },
   {
    "ext": "bf",
    "name": "Factory File",
    "role": "Editor",
    "icon": "build/bf.ico"
   },
   {
    "ext": "www",
    "name": "Web File",
    "role": "Editor",
    "icon": "build/www.ico"
   },
   {
    "ext": "ino",
    "name": "Arduino File",
    "role": "Editor",
    "icon": "build/ino.ico"
   },
   {
    "ext": "py",
    "name": "Python File",
    "role": "Editor",
    "icon": "build/py.ico"
   },
   {
    "ext": "html",
    "name": "HTML File",
    "role": "Editor",
    "icon": "build/html.ico"
   }
  ],
  "extraFiles": [
   "www",
   "compilation",
   "pilotes",
   "README.md",
   "LICENSE.md",
   "config.json"
  ],
  "extraResources": [
   "dev-app-update.yml",
   "app-update.yml"
  ],
  "publish": [
   {
    "provider": "github",
    "repo": "blocklino",
    "owner": "fontainejp",
    "releaseType": "release"
   }
  ]
 },
 "repository": {
  "type": "git",
  "url": "https://github.com/fontainejp/blocklino"
 },
 "bugs": {
  "url": "https://github.com/fontainejp/blocklino/issues"
 },
 "devDependencies": {
  "electron": "4.1.1",
  "electron-builder": "20.39.0"
 },
 "dependencies": {
  "ajv": "6.10.0",
  "child_process": "1.0.2",
  "electron-updater": "4.0.6",
  "ftp": "0.3.10",
  "serialport": "7.1.4",
  "tableify": "1.1.0"
 }
}
