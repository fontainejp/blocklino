{
 "name": "Blocklino",
 "version": "1.3.0",
 "description": "environnement de d√©veloppement pour langage graphique",
 "author": "Fontaine Jean Philippe",
 "license": "CC0-1.0",
 "main": "electronApp.js",
 "keywords": [
  "blockly","BLOCKLY",
  "arduino","ARDUINO",
  "esp8266","ESP8266",
  "electron","ELECTRON",
  "serialport","SERIALPORT",
  "electron-builder",
  "electron-updater"
 ],
 "scripts": {
  "postinstall": "electron-builder install-app-deps",
  "start": "electron .",
  "compiler": "build --win --ia32",
  "publier": "build --win --ia32 -p always"
 },
 "build": {
  "appId": "com.electron.blocklino",
  "asar": true,
  "directories": {
   "buildResources": "./build",
   "output": "../dist"
  },
  "nsis": {
   "installerIcon": "build/install.ico",
   "uninstallerIcon": "build/app.ico",
   "oneClick": false,
   "perMachine": true,
   "deleteAppDataOnUninstall": true,
   "allowToChangeInstallationDirectory": true,
   "runAfterFinish": true,
   "include": "build/blocklino.nsh"
  },
  "win": {
   "target": ["nsis", "portable", "zip"],
   "icon": "build/app.ico"
  },
  "fileAssociations": {
   "ext": "bloc",
   "name": "BLOC File",
   "role": "Editor",
   "icon": "build/file.ico"
  },
  "extraFiles": [
   "www",
   "compilation",
   "pilotes",
   "README.md",
   "LICENSE.md",
   "config.json"
  ],
  "extraResources": [
   "dev-app-update.yml",
   "app-update.yml"
  ],
  "publish": [{
    "provider": "github",
    "repo": "blocklino",
	"owner": "fontainejp",
	"releaseType": "release"	
  }]
 },
  "repository": {
    "type": "git",
    "url": "https://github.com/fontainejp/blocklino"
  },
 "bugs": {
  "url": "https://github.com/fontainejp/blocklino/issues"
 },
 "devDependencies": {
    "electron": "^1.8.8",
    "electron-builder": "^20.38.5"
  },
 "dependencies": {
  "ajv": "^6.9.2",
  "child_process": "^1.0.2",
  "electron-updater": "^4.0.0",
  "serialport": "^4.0.7"
 }
}